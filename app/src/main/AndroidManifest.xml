<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fakesetgame.seniordesign" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="com.example.gcm.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.example.gcm.permission.C2D_MESSAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Splash screen -->
        <activity
            android:name="fakesetgame.seniordesign.SplashScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Home Screen -->
        <activity
            android:name="fakesetgame.seniordesign.HomeScreen"
            android:label="@string/title_activity_home_screen"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" >
        </activity>

        <!-- General Gameplay Screen -->
        <activity
            android:name="fakesetgame.seniordesign.GameScreen"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_game_screen"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" >

            <!-- Support for API levels under 16 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeScreen" />
        </activity>

        <!-- Game Over/Summary Screen -->
        <activity
            android:name="fakesetgame.seniordesign.SummaryScreen"
            android:label="@string/title_activity_summary_screen"
            android:theme="@android:style/Theme.Holo.Light.Dialog.NoActionBar" >

            <!-- Support for API levels under 16 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeScreen" />
        </activity>

        <!-- Option Modification Screen -->
        <activity
            android:name="fakesetgame.seniordesign.OptionsScreen"
            android:label="@string/title_activity_options_screen"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" >
        </activity>
    </application>

</manifest>
