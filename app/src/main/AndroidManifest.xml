<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fakesetgame.seniordesign" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Splash screen -->
        <activity
            android:name=".SplashScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Home Screen -->
        <activity
            android:name=".HomeScreen"
            android:label="@string/title_activity_home_screen"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" >
        </activity>

        <!-- General Gameplay Screen -->
        <activity
            android:name=".GameScreen"
            android:label="@string/title_activity_game_screen"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
            android:parentActivityName=".HomeScreen">
            <!-- Support for API levels under 16 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeScreen" />
        </activity>

        <!-- Game Over/Summary Screen -->
        <activity
            android:name=".SummaryScreen"
            android:label="@string/title_activity_summary_screen"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
            android:parentActivityName=".HomeScreen">
            <!-- Support for API levels under 16 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeScreen" />
        </activity>

        <!-- Option Modification Screen -->
        <activity
            android:name=".OptionsScreen"
            android:label="@string/title_activity_options_screen"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" >
        </activity>
    </application>

</manifest>
