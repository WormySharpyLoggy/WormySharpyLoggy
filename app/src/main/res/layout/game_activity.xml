<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:keepScreenOn="true"
    android:orientation="vertical"
    tools:context=".GameScreen">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TableLayout
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <GridLayout
                android:layout_width="254dp"
                android:layout_height="fill_parent"
                android:columnCount="3"
                android:rowCount="2">

                <LinearLayout
                    android:layout_width="84dp"
                    android:layout_height="fill_parent"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/FoundSet1_1"
                        android:layout_width="28dp"
                        android:layout_height="40dp"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:src="@drawable/tile_blank" />

                    <ImageView
                        android:id="@+id/FoundSet1_2"
                        android:layout_width="28dp"
                        android:layout_height="40dp"
                        android:layout_column="1"
                        android:layout_row="0"
                        android:src="@drawable/tile_blank" />

                    <ImageView
                        android:id="@+id/FoundSet1_3"
                        android:layout_width="28dp"
                        android:layout_height="40dp"
                        android:layout_column="2"
                        android:layout_row="0"
                        android:src="@drawable/tile_blank" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="84dp"
                    android:layout_height="fill_parent"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/FoundSet2_1"
                        android:layout_width="28dp"
                        android:layout_height="40dp"
                        android:layout_column="3"
                        android:layout_row="0"
                        android:src="@drawable/tile_blank" />

                    <ImageView
                        android:id="@+id/FoundSet2_2"
                        android:layout_width="28dp"
                        android:layout_height="40dp"
                        android:layout_column="4"
                        android:layout_row="0"
                        android:src="@drawable/tile_blank" />

                    <ImageView
                        android:id="@+id/FoundSet2_3"
                        android:layout_width="28dp"
                        android:layout_height="40dp"
                        android:layout_column="5"
                        android:layout_rowSpan="1"
                        android:src="@drawable/tile_blank" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="84dp"
                    android:layout_height="fill_parent"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/FoundSet3_1"
                        android:layout_width="28dp"
                        android:layout_height="40dp"
                        android:layout_column="6"
                        android:layout_row="0"
                        android:src="@drawable/tile_blank" />

                    <ImageView
                        android:id="@+id/FoundSet3_2"
                        android:layout_width="28dp"
                        android:layout_height="40dp"
                        android:layout_column="7"
                        android:layout_row="0"
                        android:src="@drawable/tile_blank" />

                    <ImageView
                        android:id="@+id/FoundSet3_3"
                        android:layout_width="28dp"
                        android:layout_height="40dp"
                        android:layout_column="8"
                        android:layout_row="0"
                        android:src="@drawable/tile_blank" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="84dp"
                    android:layout_height="fill_parent"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/FoundSet4_1"
                        android:layout_width="28dp"
                        android:layout_height="40dp"
                        android:layout_column="6"
                        android:layout_row="0"
                        android:src="@drawable/tile_blank" />

                    <ImageView
                        android:id="@+id/FoundSet4_2"
                        android:layout_width="28dp"
                        android:layout_height="40dp"
                        android:layout_column="7"
                        android:layout_row="0"
                        android:src="@drawable/tile_blank" />

                    <ImageView
                        android:id="@+id/FoundSet4_3"
                        android:layout_width="28dp"
                        android:layout_height="40dp"
                        android:layout_column="8"
                        android:layout_row="0"
                        android:src="@drawable/tile_blank" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="84dp"
                    android:layout_height="fill_parent"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/FoundSet5_1"
                        android:layout_width="28dp"
                        android:layout_height="40dp"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:src="@drawable/tile_blank" />

                    <ImageView
                        android:id="@+id/FoundSet5_2"
                        android:layout_width="28dp"
                        android:layout_height="40dp"
                        android:layout_column="1"
                        android:layout_row="0"
                        android:src="@drawable/tile_blank" />

                    <ImageView
                        android:id="@+id/FoundSet5_3"
                        android:layout_width="28dp"
                        android:layout_height="40dp"
                        android:layout_column="2"
                        android:layout_row="0"
                        android:src="@drawable/tile_blank" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="84dp"
                    android:layout_height="fill_parent"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/FoundSet6_1"
                        android:layout_width="28dp"
                        android:layout_height="40dp"
                        android:layout_column="3"
                        android:layout_row="0"
                        android:src="@drawable/tile_blank" />

                    <ImageView
                        android:id="@+id/FoundSet6_2"
                        android:layout_width="28dp"
                        android:layout_height="40dp"
                        android:layout_column="4"
                        android:layout_row="0"
                        android:src="@drawable/tile_blank" />

                    <ImageView
                        android:id="@+id/FoundSet6_3"
                        android:layout_width="28dp"
                        android:layout_height="40dp"
                        android:layout_column="5"
                        android:layout_rowSpan="1"
                        android:src="@drawable/tile_blank" />
                </LinearLayout>

            </GridLayout>
        </TableLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <Button
                    android:id="@+id/HintButton"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hint"
                    android:onClick="onClickHint" />

                <TextView
                    android:id="@+id/TimeView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="00:00"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/Board"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout style="@style/TileRow">

            <fakesetgame.seniordesign.view.ShadedImageView
                android:id="@+id/Tile1"
                style="@style/TileButton"
                android:clickable="true"
                android:src="@drawable/tile_3111" />

            <fakesetgame.seniordesign.view.ShadedImageView
                android:id="@+id/Tile2"
                style="@style/TileButton"
                android:clickable="true"
                android:src="@drawable/tile_1112" />

            <fakesetgame.seniordesign.view.ShadedImageView
                android:id="@+id/Tile3"
                style="@style/TileButton"
                android:clickable="true"
                android:src="@drawable/tile_1113" />
        </LinearLayout>

        <LinearLayout style="@style/TileRow">

            <fakesetgame.seniordesign.view.ShadedImageView
                android:id="@+id/Tile4"
                style="@style/TileButton"
                android:clickable="true"
                android:src="@drawable/tile_3111" />

            <fakesetgame.seniordesign.view.ShadedImageView
                android:id="@+id/Tile5"
                style="@style/TileButton"
                android:clickable="true"
                android:src="@drawable/tile_1112" />

            <fakesetgame.seniordesign.view.ShadedImageView
                android:id="@+id/Tile6"
                style="@style/TileButton"
                android:clickable="true"
                android:src="@drawable/tile_1113" />
        </LinearLayout>

        <LinearLayout style="@style/TileRow">

            <fakesetgame.seniordesign.view.ShadedImageView
                android:id="@+id/Tile7"
                style="@style/TileButton"
                android:clickable="true"
                android:src="@drawable/tile_3121" />

            <fakesetgame.seniordesign.view.ShadedImageView
                android:id="@+id/Tile8"
                style="@style/TileButton"
                android:clickable="true"
                android:src="@drawable/tile_1112" />

            <fakesetgame.seniordesign.view.ShadedImageView
                android:id="@+id/Tile9"
                style="@style/TileButton"
                android:clickable="true"
                android:src="@drawable/tile_1113" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>