<GridLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:columnCount="3"
    android:rowCount="4"
    android:id="@+id/MainGrid">

    <TableLayout
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Found Sets:"
                android:id="@+id/textView3" />
        </TableRow>

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:columnCount="3"
            android:rowCount="2">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="84dp"
                android:layout_height="fill_parent"
                android:layout_column="0"
                android:layout_row="0">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:src="@drawable/tile_1112" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView2"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:src="@drawable/tile_1111" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView12"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:src="@drawable/tile_1111" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="84dp"
                android:layout_height="fill_parent"
                android:layout_column="1"
                android:layout_row="0">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView13"
                    android:layout_column="3"
                    android:layout_row="0"
                    android:src="@drawable/tile_1111" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView14"
                    android:layout_column="4"
                    android:layout_row="0"
                    android:src="@drawable/tile_1111" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView15"
                    android:layout_column="5"
                    android:layout_rowSpan="1"
                    android:src="@drawable/tile_1111" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="84dp"
                android:layout_height="fill_parent"
                android:layout_column="2"
                android:layout_row="0">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView16"
                    android:layout_column="6"
                    android:layout_row="0"
                    android:src="@drawable/tile_1111" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView17"
                    android:layout_column="7"
                    android:layout_row="0"
                    android:src="@drawable/tile_1111" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView18"
                    android:layout_column="8"
                    android:layout_row="0"
                    android:src="@drawable/tile_1111" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="84dp"
                android:layout_height="fill_parent"
                android:id="@+id/linearLayout"
                android:layout_column="0"
                android:layout_row="1">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView19"
                    android:layout_column="6"
                    android:layout_row="0"
                    android:src="@drawable/tile_1111" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView20"
                    android:layout_column="7"
                    android:layout_row="0"
                    android:src="@drawable/tile_1111" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView21"
                    android:layout_column="8"
                    android:layout_row="0"
                    android:src="@drawable/tile_1111" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="84dp"
                android:layout_height="fill_parent"
                android:id="@+id/linearLayout2"
                android:layout_column="1"
                android:layout_row="1">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView22"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:src="@drawable/tile_1112" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView23"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:src="@drawable/tile_1111" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView24"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:src="@drawable/tile_1111" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="84dp"
                android:layout_height="fill_parent"
                android:id="@+id/linearLayout3"
                android:layout_column="2"
                android:layout_row="1">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView25"
                    android:layout_column="3"
                    android:layout_row="0"
                    android:src="@drawable/tile_1111" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView26"
                    android:layout_column="4"
                    android:layout_row="0"
                    android:src="@drawable/tile_1111" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView27"
                    android:layout_column="5"
                    android:layout_rowSpan="1"
                    android:src="@drawable/tile_1111" />
            </LinearLayout>

        </GridLayout>
    </TableLayout>

    <TableLayout
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="2">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Time:"
                android:id="@+id/textView" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="00:00"
                android:id="@+id/textView2" />
        </TableRow>
    </TableLayout>

    <ImageView
        android:layout_width="127dp"
        android:layout_height="127dp"
        android:id="@+id/TileTL"
        android:layout_row="1"
        android:layout_column="0"
        android:src="@drawable/tile_1111"
        android:clickable="true" />

    <ImageView
        android:layout_width="127dp"
        android:layout_height="127dp"
        android:id="@+id/TileTC"
        android:layout_row="1"
        android:layout_column="1"
        android:src="@drawable/tile_1112"
        android:clickable="true" />

    <ImageView
        android:layout_width="127dp"
        android:layout_height="127dp"
        android:id="@+id/TileTR"
        android:layout_row="1"
        android:layout_column="2"
        android:src="@drawable/tile_1113"
        android:clickable="true" />

    <ImageView
        android:layout_width="127dp"
        android:layout_height="127dp"
        android:id="@+id/TileCL"
        android:layout_row="2"
        android:layout_column="0"
        android:src="@drawable/tile_1121"
        android:clickable="true" />

    <ImageView
        android:layout_width="127dp"
        android:layout_height="127dp"
        android:id="@+id/TileCC"
        android:layout_row="2"
        android:layout_column="1"
        android:src="@drawable/tile_1122"
        android:clickable="true" />

    <ImageView
        android:layout_width="127dp"
        android:layout_height="127dp"
        android:id="@+id/TileCR"
        android:layout_column="2"
        android:layout_row="2"
        android:src="@drawable/tile_1123"
        android:clickable="true" />

    <ImageView
        android:layout_width="127dp"
        android:layout_height="127dp"
        android:id="@+id/TileBL"
        android:layout_column="0"
        android:layout_row="3"
        android:src="@drawable/tile_1131"
        android:clickable="true" />

    <ImageView
        android:layout_width="127dp"
        android:layout_height="127dp"
        android:id="@+id/TileBC"
        android:layout_column="1"
        android:layout_row="3"
        android:src="@drawable/tile_1132"
        android:clickable="true" />

    <ImageView
        android:layout_width="127dp"
        android:layout_height="127dp"
        android:id="@+id/TileBR"
        android:layout_column="2"
        android:layout_row="3"
        android:src="@drawable/tile_1133"
        android:clickable="true" />

</GridLayout>