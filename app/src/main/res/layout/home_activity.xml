<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomeScreen"
    android:clickable="true">


    <Button
        android:id="@+id/newSingle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="StartSP"
        android:text="@string/newSingle"
        android:enabled="true" />

    <Button
        android:id="@+id/newTimeAttack"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newSingle"
        android:layout_centerHorizontal="true"
        android:onClick="StartTA"
        android:text="@string/newTimeAttack"
        android:enabled="true" />

    <Button
        android:id="@+id/newMulti"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newTimeAttack"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:text="@string/newMulti" />

    <Button
        android:id="@+id/options"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newMulti"
        android:layout_centerHorizontal="true"
        android:enabled="true"
        android:text="@string/options"
        android:onClick="SetOptions" />
</RelativeLayout>
