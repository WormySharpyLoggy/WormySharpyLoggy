<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomeScreen"
    android:clickable="true">



    <Button
        android:id="@+id/newStandard"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:onClick="StartGame"
        android:text="@string/newGame"
        android:enabled="true"
        android:layout_below="@+id/playMode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/newTA"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:text="@string/newTAGame"
        android:layout_below="@+id/newStandard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="StartGame" />

    <Button
        android:id="@+id/options"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:text="@string/options"
        android:onClick="ViewOptions"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/playMode"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/singlePlay"
            android:id="@+id/singlePlay"
            android:checked="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multiPlay"
            android:id="@+id/multiPlay" />
    </RadioGroup>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:src="@drawable/tile_3332" />

</RelativeLayout>
